<h1>Listing eveniments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Timestart</th>
      <th>Timeend</th>
      <th>Category</th>
      <th>Price</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eveniments.each do |eveniment| %>
      <tr>
        <td><%= eveniment.title %></td>
        <td><%= eveniment.description %></td>
        <td><%= eveniment.date %></td>
        <td><%= eveniment.timestart %></td>
        <td><%= eveniment.timeend %></td>
        <td><%= eveniment.category %></td>
        <td><%= eveniment.price %></td>
        <td><%= eveniment.location %></td>
        <td><%= link_to 'Show', eveniment %></td>
        <td><%= link_to 'Edit', edit_eveniment_path(eveniment) %></td>
        <td><%= link_to 'Destroy', eveniment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

